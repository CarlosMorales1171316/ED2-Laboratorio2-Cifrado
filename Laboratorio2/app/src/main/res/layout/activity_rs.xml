<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCFFFF"
    tools:context=".RSALlavesVista">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:hint="Crear llaves RSA"
        android:textAlignment="center"
        android:textSize="25dp" />
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />


    <EditText
        android:id="@+id/Texto_KeyQ"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Ingrese el valor de Q"
        android:inputType="number"
        android:textAlignment="center"
        android:textStyle="bold" />
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />

    <EditText
        android:id="@+id/Texto_KeyP"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Ingrese el valor de P"
        android:inputType="number"
        android:textAlignment="center"
        android:textStyle="bold" />
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />

    <EditText
        android:id="@+id/Texto_KeyE"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Ingrese valor de E"
        android:inputType="number"
        android:textAlignment="center"
        android:textStyle="bold" />
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />
    <Button
        android:id="@+id/Boton_RutaRSA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"

        android:text="ESCOJER RUTA DE ALMACENAMIENTO LLAVES" />
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />
    <Button
        android:id="@+id/Boton_Llaves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="GENERAR LLAVES" />
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/MostrarLlavesRsa"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_centerHorizontal="true"
        android:background="#e23030"
        android:padding="10dp"
        android:textColor="@android:color/background_dark"
        android:textSize="15dp" />
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />
    <Button
        android:id="@+id/Boton_CifrarVista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="CIFRAR MIS ARCHIVOS" />
</LinearLayout>